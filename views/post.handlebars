<section class="container">
  <h3 class="post-name">{{post.title}}</h3>
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
  <form id="create-comment">
    <input type="text" id="comment-content" name="comment-content" placeholder="Comment Text"/>
    <button type="submit">Submit</button>
  </form>
</section>

<script src="js/new-comment.js"></script>
